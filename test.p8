version 42
__lua__
function _init()
	hello = "hello, world â™¥"
	center = {x=32, y=32}
	background = 0
	ball = {
	 x=32,
	 y=32,
	 dx=0.1,
	 dy=0.1,
	 r=5,
	 col=8
	}
end

function _update()
	background = background + 0.01
	if background > 15 then
		background = 0
	end
	
	ball.x = ball.x + ball.dx
	ball.y = ball.y + ball.dy
	
	if ball.x > 60 or 
	   ball.x < 4 then
	 ball.dx = ball.dx*-1
	 ball.col = ball.col+1
	end
	if ball.y > 60 or
	   ball.y < 4 then
	 ball.dy = ball.dy *-1
	 ball.col = ball.col+1
	end
end

function _draw()
 cls(background)
 rect(0,0,64,64)
	print(
		hello,
		-#hello*4/2+center.x,
		-1*5/2+center.y,
		7
	)
	
	circfill(ball.x, ball.y, ball.r, ball.col)
end
